name: baserock_gerrit
kind: cluster
systems:
  - morph: baserock_gerrit/gerrit-system-x86_64.morph
    deploy:
      gerrit.baserock.org:
        type: openstack
        location: https://compute.datacentred.io:5000/v2.0
        OPENSTACK_IMAGENAME: baserock_gerrit
        CLOUD_INIT: yes
        DISK_SIZE: 3G
        KERNEL_ARGS: console=tty0 console=ttyS0
